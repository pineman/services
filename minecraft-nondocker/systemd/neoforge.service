[Unit]
Description=Neoforge Server in tmux
After=network.target

[Service]
Type=forking
User=root
Group=root
WorkingDirectory=/root/neoforge
ExecStart=/usr/bin/tmux new-session -d -s "neoforge" "/root/neoforge/run.sh"
ExecStop=/usr/bin/tmux send-keys -t "neoforge" "stop"
Restart=always
RestartSec=10
TimeoutStopSec=30
Environment="TERM=xterm-256color"

[Install]
WantedBy=multi-user.target
